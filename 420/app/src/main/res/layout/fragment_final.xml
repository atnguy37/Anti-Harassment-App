<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/collect_cop_data"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="398dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Collect Cop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" />

        <Button
            android:id="@+id/predict_cop_data"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="66dp"
            android:layout_marginBottom="397dp"
            android:layout_toRightOf="@id/collect_cop_data"
            android:background="@android:color/darker_gray"
            android:text="Predict Cop" />


        <Button
            android:id="@+id/collect_hungry_data"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="270dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Collect      Hungry" />

        <Button
            android:id="@+id/predict_hungry_data"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="67dp"
            android:layout_marginBottom="270dp"
            android:layout_toRightOf="@id/collect_hungry_data"
            android:background="@android:color/darker_gray"
            android:text="Predict     Hungry" />

        <Button
            android:id="@+id/collect_about_data"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="14dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Collect About" />

        <Button
            android:id="@+id/collect_headache_data"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="140dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Collect Headache" />

        <Button
            android:id="@+id/predict_about_data"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="67dp"
            android:layout_marginBottom="14dp"
            android:layout_toRightOf="@id/collect_hungry_data"
            android:background="@android:color/darker_gray"
            android:text="Predict About" />

        <Button
            android:id="@+id/predict_headache_data"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="67dp"
            android:layout_marginBottom="141dp"
            android:layout_toRightOf="@id/collect_hungry_data"
            android:background="@android:color/darker_gray"
            android:text="Predict Headache" />


    </RelativeLayout>

    <include layout="@layout/graphview_layout"/>

    <include layout="@layout/predict_gesture_layout"/>


</androidx.constraintlayout.widget.ConstraintLayout>